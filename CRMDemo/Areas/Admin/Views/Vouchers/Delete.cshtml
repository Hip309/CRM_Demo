@model CRMDemo.Models.Voucher

@{
    ViewData["Title"] = "Delete voucher";
    Layout = "~/Areas/Admin/Views/Shared/_VouchersLayout.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn thực sự muốn xóa voucher này?</h3>
<div>
    <h4>Voucher</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VoucherName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VoucherName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VoucherValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VoucherValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Condition)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Condition)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Exd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exd)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Trở lại</a>
    </form>
</div>
